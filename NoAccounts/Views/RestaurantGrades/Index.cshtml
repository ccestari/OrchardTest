@model PagedList.IPagedList<NoAccounts.Models.RestaurantGrade>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm())
{
    <p>
        Find By Name: @Html.TextBox("SearchString")
        <input type="submit" value="search" />
    </p>
}
<table class="table">
    <tr>
        <th> 
            @Html.ActionLink("Restaurant Name", "Index", new { sortOrder = ViewBag.NameSortParm }) 
        </th> 
        <th>
            Boro
        </th>
        <th>
            Building
        </th>
        <th>
            Street
        </th>
        <th>
            ZipCode
        </th>
        <th>
            Phone
        </th>
        <th>
            CuisineType
        </th>
        <th>
            InspectionDate
        </th>
        <th>
            ViolationCode
        </th>
        <th>
            Score
        </th>
        <th>
            @Html.ActionLink("Grade", "Index", new { sortOrder = ViewBag.GradeEarned})
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Dba)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Boro)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Building)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Street)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ZipCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CuisineType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InspectionDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ViolationCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Score)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Grade)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.RestaurantGradeID }) |
            @Html.ActionLink("Details", "Details", new { id=item.RestaurantGradeID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.RestaurantGradeID })
        </td>
    </tr>
}

</table>
